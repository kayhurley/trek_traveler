<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bkgSurface">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/BikeAppBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/bkgSection"
        android:contentInsetStart="0dp"
        app:navigationIcon="@drawable/back_arrow"
        app:title="Bike Rentals"
        app:titleTextColor="@color/darkText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable View with Cards -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/BikeAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Container for Cards -->
        <LinearLayout
            android:id="@+id/cardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Sample CardView -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:strokeColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Card Title -->
                    <TextView
                        android:id="@+id/cardTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bike Rental 1"
                        android:textColor="@color/darkText"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Card Description -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rental information here."
                        android:textColor="@color/secondaryText"
                        android:textSize="14sp" />

                    <!-- Buttons for Directions and Website -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:gravity="end">

                        <!-- Website Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/websiteButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Website"
                            android:textColor="@color/secondaryText"
                            android:backgroundTint="@android:color/transparent"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/secondaryText"
                            android:layout_marginEnd="16dp" />

                        <!-- Get Directions Button -->
                        <Button
                            android:id="@+id/directionsButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="Directions"
                            android:drawableLeft="@drawable/map_pin"

                            android:textColor="@color/darkText"
                            android:backgroundTint="@color/LightBlue"/>

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Repeat the CardView structure for additional cards -->

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
