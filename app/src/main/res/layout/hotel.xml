<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bkgSurface"
    tools:context=".HotelActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bkgSection"
        android:contentInsetStart="0dp"
        app:navigationIcon="@drawable/back_arrow"
        app:title="Accommodations"
        app:titleTextColor="@color/darkText"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!-- Card Container -->
    <LinearLayout
        android:id="@+id/cardContainerTransit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/bkgSurface">

        <!-- Card with Padding -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bkgSurface"
            app:cardCornerRadius="8dp"
            app:strokeColor="@android:color/transparent">

            <!-- Content Inside Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/bkgSection">


                <!-- Row: Image, Title, Rating, Price -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Hotel Image -->
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Hotel Image"
                        android:src="@drawable/smallhotel" />

                    <!-- Title and Rating -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AC Hotel Tucson Downtown"
                            android:textColor="@color/darkText"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <!-- Rating -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="4dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/star" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="4.2"
                                android:textColor="@color/darkText"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Price -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$$$"
                        android:textColor="@color/darkText"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="top"/>
                </LinearLayout>

                <!-- Button Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:paddingTop="16dp">

                    <!-- Info Button -->
                    <Button
                        android:id="@+id/hotelInfoButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Info"
                        android:drawableLeft="@drawable/info"
                        android:textColor="@color/darkText"
                        android:backgroundTint="@color/LightBlue"
                        android:paddingStart="12dp"
                        android:paddingEnd="16dp" />
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>



        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bkgSurface"
            app:cardCornerRadius="8dp"
            app:strokeColor="@android:color/transparent"
            android:layout_marginTop="16dp">

        </com.google.android.material.card.MaterialCardView>

            <!-- Content Inside Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/bkgSection">


                <!-- Row: Image, Title, Rating, Price -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Hotel Image -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/hotel_outside2"
                        android:scaleType="centerCrop"
                        android:layout_marginRight="8dp"
                        app:shapeAppearanceOverlay="@style/SmallRoundedImageView" />

                    <!-- Title and Rating -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hampton Inn Tucson Downtown"
                            android:textColor="@color/darkText"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <!-- Rating -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="4dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/star" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="4.1"
                                android:textColor="@color/darkText"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Price -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$$"
                        android:textColor="@color/darkText"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="top"/>
                </LinearLayout>

                <!-- Button Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:paddingTop="16dp">

                    <!-- Info Button -->
                    <Button
                        android:id="@+id/hotel2InfoButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Info"
                        android:drawableLeft="@drawable/info"
                        android:textColor="@color/darkText"
                        android:backgroundTint="@color/LightBlue"
                        android:paddingStart="12dp"
                        android:paddingEnd="16dp" />
                </LinearLayout>

            </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bkgSurface"
            app:cardCornerRadius="8dp"
            app:strokeColor="@android:color/transparent"
            android:layout_marginTop="16dp">

            <!-- Content Inside Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/bkgSection">


                <!-- Row: Image, Title, Rating, Price -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Hotel Image -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/hotel_outside_3"
                        android:scaleType="centerCrop"
                        android:layout_marginRight="8dp"
                        app:shapeAppearanceOverlay="@style/SmallRoundedImageView" />

                    <!-- Title and Rating -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DoubleTree by Hilton Tucson Downtown Convention Center"
                            android:textColor="@color/darkText"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <!-- Rating -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="4dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/star" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="4.5"
                                android:textColor="@color/darkText"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Price -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$$$"
                        android:textColor="@color/darkText"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="top"/>
                </LinearLayout>

                <!-- Button Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:paddingTop="16dp">

                    <!-- Info Button -->
                    <Button
                        android:id="@+id/hotel3InfoButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Info"
                        android:drawableLeft="@drawable/info"
                        android:textColor="@color/darkText"
                        android:backgroundTint="@color/LightBlue"
                        android:paddingStart="12dp"
                        android:paddingEnd="16dp" />
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="360dp"
            android:paddingTop="32dp"
            android:src="@drawable/coming_soon_rounded"
            android:scaleType="fitCenter"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="More results coming soon..."
            android:textColor="@color/darkText"
            android:textSize="18sp"
            android:paddingTop="16dp"
            android:textStyle="bold"
            android:gravity="center"/>


    </LinearLayout>
    </ScrollView>

</LinearLayout>
